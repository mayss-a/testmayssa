{% extends 'base.html.twig' %}

{% block title %}Hello BoutiqueController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello ! ✅</h1>

  
<table  border="1" >
    <thead>
        <th>Nom</th>
         <th>Datenaissance </th>
           <th>hopital</th>
        <th colspan="2" >Actions</th>
    </thead>
    <tbody>
            {% for x in medecins %}
                 <tr>
                    <td>{{x.nom}}</td>
                    <td>{{x.Datenaissance | date('Y-M-D')}}</td>
                 <td>{{ x.hopital ? x.hopital.nom : 'Aucun hôpital' }}</td> {# Vérifie si hopital est nul #}
                     <td><a href="medecin/show/{{x.id}}">consulter</a></td>
                    <td><a href="medecin/edit/{{x.id}}">modifier</a></td>
                    <td><a href="medecin/delete/{{x.id}}">delete</a></td>

                 </tr>
            {% endfor %}
           
    </tbody>
</table>


<a href="/medecin/add">Ajouter un medecin</a>

</div>
{% endblock %}
